(define (wildflower-builder)
  (lambda ()
    (make-event 
     'wildflower (local-get-param "wasp-game" "wildflower-duration")
     #f 
     (lambda (nest delta state)
       (cond
	((eq? state 'first)
	 (nest-modify-energy-mult
	  (nest-modify-weather nest 'wildflower)
	  (local-get-param "wasp-game" "wildflower-multiplier")))
	((eq? state 'last)
	 (nest-modify-energy-mult
	  (nest-modify-weather nest 'calm)
	  1))
	(else nest)))
     (lambda (nest)
       (nest-wasps-foraging? nest)))))

(define (wildflower-update event nest delta)
  event)

(define (wildflower-render ctx event)
  ;; explanation text box
  (info-box-render-box ctx)
  (ctx.drawImage (find-image "sprites/wildflowers1.png") 70 500)
  (ctx.drawImage (find-image "sprites/wildflowers2.png") 1100 500)
  (info-box-render-text ctx "FORAGERS FOUND A WILDFLOWER GARDEN - NO PESTICIDES = X2 ENERGY!"))


